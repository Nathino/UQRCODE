rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Documents collection - users can only access their own documents
    match /documents/{documentId} {
      // Allow create if user owns the document
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // Allow read if user owns the document (and it exists)
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Allow update/delete if user owns the document
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // QR codes collection - users can only access their own QR codes
    match /qr_codes/{qrCodeId} {
      // Allow create if user owns the QR code
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // Allow read if user owns the QR code (and it exists)
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Allow update/delete if user owns the QR code
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Scan events collection - users can only access their own scan events
    match /scan_events/{eventId} {
      // Allow create for authenticated users OR if userId is provided (for public document scans)
      // Note: For public document scans, we trust the userId in the request
      allow create: if request.auth != null || 
        (request.resource.data.userId != null && request.resource.data.qrCodeId != null);
      
      // Allow read if user owns the scan event (must be authenticated)
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Users can only read their own scan events, cannot update/delete
      allow update, delete: if false;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

